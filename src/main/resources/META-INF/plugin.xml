<idea-plugin>
  <id>jp.ikeponias</id>
  <name>Copy Class Fields</name>
  <version>1.0.3</version>
  <vendor email="dummy" url="dummy">Ikeponias</vendor>

  <description><![CDATA[
    <p>Copy all fields to clipboard</p>
    <p>When you do intention action, you can choose menu.</p>
    <p>If you choose "Add Field to ClipBoard", current class fields and each default values added your clipboard.</p>
    ]]></description>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>com.intellij.java</depends>
  <idea-version since-build="203"/>

  <extensions defaultExtensionNs="com.intellij">
    <intentionAction>
      <className>CopyAction</className>
    </intentionAction>
    <intentionAction>
      <className>CopyBuilderAction</className>
    </intentionAction>
  </extensions>
</idea-plugin>
